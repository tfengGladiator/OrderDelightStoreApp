  .custom-container {
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 100vh; /* Make sure it fits the viewport exactly */
        margin: 0;
        box-sizing: border-box;
        overflow: hidden; /* Added to prevent overflow causing scrollbar */
  }

    .content {
        flex-grow: 1;
        padding: 0px;
        overflow-y: auto; /* Show vertical scroll only when needed */
    }

    .top-bar {
        width: 100%;
        height: 90px; /* Confirm this fits within any calculations */
